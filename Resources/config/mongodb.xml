<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="vespolina.product_manager.class">Vespolina\ProductBundle\Document\ProductManager</parameter>
        <parameter key="vespolina.model.product.class">Vespolina\ProductBundle\Document\Product</parameter>
    </parameters>

    <services>
        <service id="vespolina.product_manager" class="%vespolina.product_manager.class%">
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
        </service>
    </services>
</container>
